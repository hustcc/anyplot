{
  "name": "anyplot",
  "officialName": "anyplot",
  "version": "0.1.0",
  "description": "Visual Web Components based on G2.",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "browser": "dist/anyplot.min.js",
  "types": "lib/index.d.ts",
  "files": [
    "src",
    "lib",
    "esm",
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "clean": "rimraf lib esm dist",
    "lint-staged": "lint-staged",
    "size": "limit-size",
    "lint": "eslint ./src && prettier ./src  --check ",
    "fix": "eslint ./src --fix && prettier ./src --write ",
    "test": "echo 1",
    "build:umd": "rimraf ./dist && rollup -c && npm run size",
    "build:cjs": "rimraf ./lib && tsc --module commonjs --outDir lib",
    "build:esm": "rimraf ./esm && tsc --module ESNext --outDir esm",
    "build": "run-p build:*",
    "ci": "run-s lint test build",
    "prepare": "husky install",
    "prepublishOnly": "npm run ci"
  },
  "keywords": [
    "Web Conponents",
    "Visualization",
    "G2",
    "AntV"
  ],
  "dependencies": {
    "@antv/g2": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^7.0.0",
    "limit-size": "^0.1.4",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.39.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-polyfill-node": "^0.8.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-visualizer": "^5.6.0",
    "typescript": "^4.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "limit-size": [
    {
      "path": "dist/anyplot.min.js",
      "limit": "1 Mb",
      "gzip": true
    },
    {
      "path": "dist/anyplot.min.js",
      "limit": "2 Mb"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "author": {
    "name": "hustcc",
    "url": "https://atool.vip/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hustcc/anyplot"
  },
  "bugs": {
    "url": "https://github.com/hustcc/anyplot/issues"
  }
}
